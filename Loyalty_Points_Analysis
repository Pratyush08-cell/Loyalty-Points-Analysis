    "# the Deposit Score is 0.01 of Amount\n",
    "deposit_df['Deposit Score'] = 0.01 * deposit_df['Amount']\n",
    "deposit_scores = deposit_df.groupby('User Id')['Deposit Score'].sum().reset_index()"
   ]
